<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC  
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"  
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>  

  <session-factory>  
       <property name="hbm2ddl.auto">update</property>  
        <property name="dialect">
         org.hibernate.dialect.MySQL5Dialect</property>  
        <property name="show_sql">
        true
      </property>
         
       
         <property name="connection.driver_class">com.mysql.jdbc.Driver</property>  
       <property name="connection.url">jdbc:mysql://localhost/hw13</property>  
       <property name="connection.username">root</property>  
       <property name="connection.password"></property>  
       
    <mapping class="javaClass.Drog"/> 
     <mapping class="javaClass.Insurance"/> 
      <mapping class="javaClass.DrogInsurance"/>
      <mapping class="javaClass.User"/>  
      <mapping class="javaClass.Patient"/>
      <mapping class="javaClass.PatientDrog"/>
        <mapping class="javaClass.SaleDrug"/>
     
      
   </session-factory>  
 
</hibernate-configuration>  
